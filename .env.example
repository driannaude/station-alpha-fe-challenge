# Weather API Configuration
# Get your API key from https://www.weatherapi.com/
VITE_WEATHER_API_KEY=your_weather_api_key_here
VITE_WEATHER_MAP_API_KEY=your_weather_map_api_key_here
VITE_WEATHER_API_BASE_URL=https://api.weatherapi.com/v1

# Application Configuration
# Port for API integration app (default: 5171)
VITE_API_INTEGRATION_PORT=5171

# Cache Configuration
VITE_WEATHER_CACHE_DURATION=30

# Map Configuration
VITE_WEATHER_MAP_ZOOM=10
# Valid map types: precipitation, temp, wind, pressure, clouds
VITE_WEATHER_MAP_TYPE=precipitation

# Development Configuration
NODE_ENV=development

# Additional API Keys (if using multiple services)
# VITE_OPENWEATHER_API_KEY=your_openweather_api_key_here
# VITE_MAPBOX_API_KEY=your_mapbox_api_key_here

# Feature Flags
VITE_ENABLE_WEATHER_ALERTS=true
VITE_ENABLE_WEATHER_MAP=true
VITE_ENABLE_LOCATION_SEARCH=true