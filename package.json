{
  "name": "station-alpha-fe-challenge",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare-apps": "npm install && npm run install-apps",
    "install-apps": "npm run install-app:bug-hunting && npm run install-app:playwright && npm run install-app:animation && npm run install-app:api",
    "install-app:bug-hunting": "cd apps/bug-hunting && npm install",
    "install-app:playwright": "cd apps/playwright-challenge && npm install",
    "install-app:animation": "cd apps/animation-showcase && npm install",
    "install-app:api": "cd apps/api-integration && npm install"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.1.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "npm@10.2.3"
}
